{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "BL/*": ["./BL/*"],
      "app/*": ["./app/*"],
      "components/*": ["./components/*"],
      "shared/*": ["./shared/*"],
      "pages/*": ["./pages/*"],
      "contracts/*": ["./contracts/*"],
      "services/*": ["./services/*"],
      "routes/*": ["./routes/*"],
      "interfaces/*": ["./interfaces/*"],
      "constants/*": ["./constants/*"],
      "contexts/*": ["./contexts/*"],
      "types/*": ["./types/*"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,  // TODO: true
    "noImplicitAny": false,  // TODO: true
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
